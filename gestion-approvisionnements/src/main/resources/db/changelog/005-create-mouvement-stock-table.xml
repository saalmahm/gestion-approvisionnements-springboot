<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="005-create-mouvement-stock" author="youco">
        <createTable tableName="mouvement_stock">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_mouvement" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="quantite" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="type_mouvement" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="prix_unitaire" type="NUMERIC(10,2)"/>
            <column name="stock_apres_mouvement" type="INTEGER"/>
            <column name="produit_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_mouvement_stock__produit"
                             references="produit(id)"/>
            </column>
            <column name="commande_fournisseur_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="fk_mouvement_stock__commande"
                             references="commande_fournisseur(id)"/>
            </column>
            <column name="created_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>